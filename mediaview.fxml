<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>

<?import javafx.scene.image.ImageView?>
<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.demo1.AudioController">

    <ImageView fx:id="coverImage"
               fitWidth="200"
               fitHeight="200"
               layoutX="200"
               layoutY="0"
               preserveRatio="true" />

    <children>

        <MediaView fx:id="mediaView" fitWidth="600" fitHeight="180" layoutY="10"/>

        <Label fx:id="label_audio" layoutX="20" layoutY="200"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Audio"/>

        <Label fx:id="timeLabel" layoutX="480" layoutY="200"
               style="-fx-font-size: 14px;" text="00:00 / 00:00"/>

        <ProgressBar fx:id="audioProgress" layoutX="20" layoutY="230"
                     prefWidth="560"/>

        <HBox spacing="15" alignment="CENTER" layoutY="270" prefWidth="600">
        <children>
                <Button text="Previous" onAction="#previous"/>
                <Button text="Play" onAction="#play"/>
                <Button text="Pause" onAction="#pause"/>
                <Button text="Reset" onAction="#reset"/>
                <Button text="Next" onAction="#next"/>
            </children>
        </HBox>

        <HBox layoutX="0" layoutY="330" spacing="10" alignment="CENTER" prefWidth="600">
        <children>
            <Label text="Volume:" style="-fx-text-fill: white;"/>
            <Slider fx:id="volume" prefWidth="200" value="50"/>
            </children>
        </HBox>

    </children>
</AnchorPane>
