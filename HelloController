package org.example.demo1;

import javafx.collections.ListChangeListener;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Node;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.control.cell.PropertyValueFactory;
import javafx.stage.Modality;
import javafx.stage.Stage;

import java.io.IOException;

public class HelloController {

    private CollectionAddressBook addressBookImpl = new CollectionAddressBook();

    @FXML
    private TableColumn<Person, String> columnPIP;

    @FXML
    private TableColumn<Person, String> columnPhone;

    @FXML
    private Button btnAdd;

    @FXML
    private Button onHelloButtonClick;

    @FXML
    private Button btnEdit;

    @FXML
    private TableView<Person> tableAddressBook;

    @FXML
    private TextField textSearch;

    @FXML
    private Label LabelCount;

    private Parent fxmlEdit;
    private FXMLLoader fxmlLoader = new FXMLLoader();
    private EditController editController;
    private Stage editDialogStage;

    @FXML
    public void initialize() {
        columnPIP.setCellValueFactory(cellData -> cellData.getValue().pipProperty());
        columnPhone.setCellValueFactory(cellData -> cellData.getValue().phoneProperty());

        addressBookImpl.fillTestData();
        tableAddressBook.setItems(addressBookImpl.getPersonList());

        try {
            fxmlLoader.setLocation(getClass().getResource("edit.fxml"));
            fxmlEdit = fxmlLoader.load();
            editController = fxmlLoader.getController();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private void updateCountLabel() {
        LabelCount.setText("Кількість записів: " + addressBookImpl.getPersonList().size());
    }

    @FXML
    void onEditClick(ActionEvent event) {
        Person selected = tableAddressBook.getSelectionModel().getSelectedItem();
        if (selected != null) {
            editController.setPerson(selected);
            showDialog();
        }
    }

    private void showDialog() {
        try {
            if (editDialogStage == null) {
                editDialogStage = new Stage();
                editDialogStage.setTitle("Редагування контакту");
                editDialogStage.initModality(Modality.WINDOW_MODAL);
                editDialogStage.initOwner(tableAddressBook.getScene().getWindow());
                editDialogStage.setScene(new Scene(fxmlEdit));
            }
            editDialogStage.showAndWait();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    @FXML
    void onHelloButtonClick(ActionEvent event) throws IOException {
        FXMLLoader fxmlLoader = new
                FXMLLoader(HelloController.class.getResource("edit.fxml"));
        Scene scene = new Scene(fxmlLoader.load(), 320, 240);

        Stage stage = new Stage();
        stage.setTitle("second window");
        stage.setScene(scene);
        stage.show();
    }

    @FXML
    void new_Alert(ActionEvent event) {
        Alert alert = new Alert(Alert.AlertType.WARNING);
        alert.setTitle("Видалення");
        alert.setHeaderText("Results:");
        alert.setContentText("Видалення може призвести до зміни порядку осіб у Адресній книзі!");

        alert.showAndWait();
    }

    @FXML
    void confirmation_Alert(ActionEvent event) {
        Alert alert = new Alert(Alert.AlertType.CONFIRMATION);
        alert.setTitle("Видалення");
        alert.setHeaderText(null);
        alert.setContentText("Ви впевнені, що хочете видалити запис?");

        ButtonType result = alert.showAndWait().orElse(ButtonType.CANCEL);

        if (result == ButtonType.OK) {
            System.out.println("Запис видалено!");
        } else {
            System.out.println("Видалення скасовано!");
        }
    }

    @FXML
    protected void onAddClick() {
        try {
            FXMLLoader loader = new FXMLLoader(getClass().getResource("add-dialog.fxml"));
            Scene scene = new Scene(loader.load());

            AddDialogController dialogController = loader.getController();

            Stage dialog = new Stage();
            dialog.setTitle("Додати новий запис");
            dialog.setResizable(false);
            dialog.initModality(Modality.APPLICATION_MODAL);
            dialog.initOwner(btnAdd.getScene().getWindow());
            dialog.setScene(scene);

            dialog.showAndWait();

            Person newPerson = dialogController.getNewPerson();

            if (newPerson != null) {
                addressBookImpl.add(newPerson);
                tableAddressBook.getSelectionModel().select(newPerson);
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    @FXML
    protected void onOtherLabsClick() {
        try {
            FXMLLoader loader = new FXMLLoader(getClass().getResource("/org/example/demo1/other-labs.fxml"));
            Scene scene = new Scene(loader.load());

            Stage dialog = new Stage();
            dialog.setTitle("Other Labs");
            dialog.setResizable(false);
            dialog.initModality(Modality.APPLICATION_MODAL);
            dialog.initOwner(btnAdd.getScene().getWindow());
            dialog.setScene(scene);
            dialog.showAndWait();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    @FXML
    protected void onExitClick() {
        Stage stage = (Stage) btnAdd.getScene().getWindow();
        stage.close();
    }
}
