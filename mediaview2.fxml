<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<VBox prefHeight="400" prefWidth="600"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.demo1.MediaViewController">

    <children>
        <AnchorPane prefHeight="400" prefWidth="600">

            <children>

                <MediaView fx:id="mediaView"
                           layoutX="0"
                           layoutY="0"
                           fitWidth="600"
                           fitHeight="300" />

                <Button text="Play"
                        layoutX="180"
                        layoutY="310"
                        onAction="#play"/>

                <Button text="Pause"
                        layoutX="260"
                        layoutY="310"
                        onAction="#pause"/>

                <Button text="Reset"
                        layoutX="340"
                        layoutY="310"
                        onAction="#reset"/>

            </children>
        </AnchorPane>
    </children>
</VBox>
