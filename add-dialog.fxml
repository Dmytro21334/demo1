<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo1.AddDialogController">

    <HBox spacing="10">
        <Label minWidth="60" text="ПІП" />
        <TextField fx:id="nameField" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox spacing="10">
        <Label minWidth="60" text="Телефон" />
        <TextField fx:id="phoneField" HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#onOkClick" text="Ок" />
        <Button onAction="#onCancelClick" text="Відміна" />
    </HBox>
</VBox>
